@model IEnumerable<BeFit.Models.ExerciseType>

@{
    ViewData["Title"] = "Typy ćwiczeń";
}

<h1>Typy ćwiczeń</h1>


@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Dodaj nowy</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a> <span>|</span>
                }
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
            </td>
        </tr>
}
    </tbody>
</table>